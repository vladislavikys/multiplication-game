rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.email in [
        'zarya.vlad@yandex.ru'
      ];
    }

    // ========================================
    // USERS - С ЗАЩИТОЙ КРИТИЧЕСКИХ ПОЛЕЙ
    // ========================================
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);

      // Пользователь НЕ МОЖЕТ изменять hasLicense, activatedCodes, blocked напрямую
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['hasLicense', 'activatedCodes', 'blocked']);

      // ИСКЛЮЧЕНИЕ: Разрешить активацию кода (hasLicense false→true и добавление кода в массив)
      allow update: if isOwner(userId)
        && resource.data.hasLicense == false
        && request.resource.data.hasLicense == true
        && request.resource.data.activatedCodes.size() == resource.data.activatedCodes.size() + 1;

      // Админ может изменять ВСЁ
      allow update: if isAdmin();

      allow delete: if false;
    }

    // ========================================
    // SESSIONS - УПРОЩЕННЫЕ ПРАВИЛА
    // ========================================
    match /sessions/{sessionId} {
      allow read: if isOwner(sessionId) || isAdmin();
      allow write: if isOwner(sessionId) || isAdmin();
      allow delete: if isOwner(sessionId) || isAdmin();
    }

    // ========================================
    // CODES - УПРОЩЕННЫЕ ПРАВИЛА
    // ========================================
    match /codes/{codeId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin();
    }

    // ========================================
    // SECURITY LOGS - УПРОЩЕННЫЕ ПРАВИЛА
    // ========================================
    match /security_logs/{logId} {
      allow create: if isSignedIn();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // ========================================
    // TWO FACTOR CODES - 2FA ПРАВИЛА
    // ========================================
    match /twoFactorCodes/{userId} {
      // Создать код может только система (фактически любой авторизованный)
      allow create: if isSignedIn();

      // Прочитать код может только владелец или админ
      allow read: if isOwner(userId) || isAdmin();

      // Обновить (пометить как использованный) может только владелец
      allow update: if isOwner(userId)
        && request.resource.data.used == true
        && resource.data.used == false;

      // Удалять нельзя (коды истекают сами через TTL)
      allow delete: if false;
    }

    // ========================================
    // DEFAULT - DENY ALL
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
